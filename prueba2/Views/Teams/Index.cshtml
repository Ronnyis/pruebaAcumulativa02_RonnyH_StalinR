@model IEnumerable<prueba2.Models.Team>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-secondary">
    <tr >
        <th>
            Código
        </th>
        <th>
            Nombre
        </th>
        <th>
            País
        </th>
        <th>
            Fundación
        </th>
        @*<th>
                Nacional
            </th>*@
        @*<th>
                Logo
            </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.founded)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.national)
                </td>*@
            @*<td>
                    @Html.DisplayFor(modelItem => item.logo)
                </td>*@
            <td>
                @Html.ActionLink("Detalles", "Detalles", new { id = item.id }, new { @class="btn btn-primary"})
            </td>
        </tr>
    }

</table>
